#!/usr/bin/env node

var lisa    = require('./..'),
    version = require('./../package').version,
    command = process.argv[2];

function help() {
  console.log('Lisa v' + version);
  console.log('Usage: lisa [stage] [command] [options]');
}

if (command && command.length > 2)
  lisa.run(process.argv.slice(2));
else
  help()
  
